@model StudentManagement.Models.Student

<h2>Thêm Sinh Viên</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Mã số sinh viên</label>
        <input asp-for="MSSV" class="form-control" required/>
    </div>

    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="HoTen" class="form-control" required/>
    </div>

    <div class="form-group">
        <label>Ngày tháng năm sinh</label>
        <input asp-for="NgaySinh" type="date" class="form-control" required/>
    </div>

    <div class="form-group">
        <label>Giới tính</label>
        <select asp-for="GioiTinh" class="form-control">
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
            <option value="Khác">Khác</option>
        </select>
    </div>

    <div class="form-group">
        <label>Khoa</label>
        <select asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.Departments ?? new List<Department>(), "Id", "Name"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Khóa</label>
        <input asp-for="KhoaHoc" class="form-control" required/>
    </div>

    <div class="form-group">
        <label>Chương trình</label>
        <input asp-for="ChuongTrinh" class="form-control" required/>
    </div>

    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="DiaChi" class="form-control" required/>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" type="email" class="form-control" required/>
    </div>

    <div class="form-group">
        <label>Số điện thoại liên hệ</label>
        <input asp-for="SoDienThoai" type="tel" class="form-control" required pattern="[0-9]{10,11}" title="Nhập số điện thoại hợp lệ (10-11 số)"/>
    </div>

    <div class="form-group">
        <label>Tình trạng sinh viên</label>
        <select asp-for="StatusId" asp-items="@(new SelectList(ViewBag.Statuses ?? new List<StudentStatus>(), "Id", "Name"))" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-success mt-3">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Hủy</a>
</form>
